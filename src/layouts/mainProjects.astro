---
    import '../styles/main.project.css'
    import data from '../assets/_projects.data.json'
---

<section class="mainProjects" id="proyectos">
    <h2 class="subTitle">Projects</h2>
    {
        data.map((project ) =>(
               <article class="project">
                    <div class="project__description">
                        <h3 class="project__description--title">
                        {project.name}
                        </h3>
                        <p>{project.description}</p>
                        <div class="project__description--btns">
                            <a href={project.code} target="_blank" class="btn">Codigo</a>
                            {
                                project.link !== '' &&
                                <a href={project.link} target="_blank" class="btn">Visitar</a> 
                            }
                        </div>
                    </div>
                    <figure class="project__view">
                        <img src={project.image} alt={project.name} class="project__view--image">
                        <div class="project__view--technologies">
                        {project.technologies.map((tech) => <button class="tech">{tech}</button>)}
                        </div>
                    </figure>
               </article>
        ))
    }
</section>