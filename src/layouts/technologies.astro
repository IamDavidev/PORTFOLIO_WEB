---

import javaScript from '../assets/icons/technologies/js.svg'
import react from '../assets/icons/technologies/react.svg'
import ts from '../assets/icons/technologies/ts.svg' 
import css from '../assets/icons/technologies/css.svg'
import postcss from '../assets/icons/technologies/postcss.svg'
import nodejs from '../assets/icons/technologies/nodejs.svg'
import webcomponets from '../assets/icons/technologies/webcomponents.svg'
import git from '../assets/icons/technologies/git.svg'
import mongoDB from '../assets/icons/technologies/mongodb.svg'
import axios from '../assets/icons/technologies/axios.svg'
import graphql from '../assets/icons/technologies/graphql.svg'
import tailwindcss from '../assets/icons/technologies/tailwind.svg'
import sass from '../assets/icons/technologies/sass.svg'
import vue from '../assets/icons/technologies/vue.svg'
const  technologies = [
    {
        name: 'JavaScript',
        img:javaScript
    },    {
        name:"React",
        img:react
    },    {
        name:"webComponents",
        img: webcomponets
    },    {
        name:"TypeScript",
        img: ts
    },    {
        name:"CSS",
        img:css
    },    {
        name:"PostCss",
        img: postcss
    },    {
        name:"node.Js",
        img: nodejs
    },    {
        name : "git",
        img : git
    },    {
        name: '',
        img: mongoDB
    },    {
        name:'',
        img:axios
    }, 
        { name: 'graphql',img:graphql},
        {name: 'tailwindcss', img: tailwindcss},
        {name:'sass',img : sass},
        { name:'vue', img: vue}


]
---




<section class="technologies" id="lenguajes">
    <h1 class="technologies--title">
    {" { Tecnlogias y Herramientas }"}
    </h1>
    <div class="renderTechnologies">
        {
            technologies.map((technology) =>  (
                <div class="technology" style={`background-image:url(${technology.img})`}>
                    {
                        technology.name && (
                        <span class="technology__name">
                            {technology.name}
                        </span>
                        )   
                        }
                    </div>
                )
            )
        }
    </div>
</section>


<style>
.technologies {
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  gap: 5rem;
  & .technologies--title {
    font-size: 4.5rem;
    font-weight: bold;
    margin: 0;
    background: linear-gradient(180deg, var(--color--blue), var(--text--color));
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  & .renderTechnologies {
    width: 60%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
    & .technology {
      width: 135px;
      height: 100px;
      border-radius: 1rem;
      background-position: center;
      background-repeat: no-repeat;
      background-size: contain;
      object-fit: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0 1rem;
      box-sizing: border-box;
      & span {
        backdrop-filter: blur(16px) saturate(180%);
        width: 100%;
        text-align: center;
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: rgba(17, 25, 40, 0.75);
        border-radius: 1rem;
        padding: 1rem;
        font-size: 1.5rem;
        color: var(--text--color);
        font-weight: bold;
      }
    }
  }
}

@media (min-width: 320px) and (max-width: 768px) {
  .technologies {
    width: auto;
    & .technologies--title {
      text-align: center;
      font-size: 3.5rem;
    }
    & .renderTechnologies {
      width: 100%;
    }
  }
}

</style>